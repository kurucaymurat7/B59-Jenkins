pipeline {
    agent any

    stages {
        stage ('Compile') {
            steps{
                withMaven (maven: 'maven_3_8_6') {
                    sh 'mvn clean -Dtest: SmokeRunner'
                }
            }
        }

        stage ('Testing Stage') {
            steps {
               withMaven (maven: 'maven_3_8_6') {
                  sh 'mvn test -Dtest=CucumberRunner'
                  }
            }
        }
    }
}